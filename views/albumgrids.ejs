<div class="mycontainer thirdsection">
    
    <div class="uk-grid"> 
        
        <div class="uk-width-1-3@s" style="margin-top: 70px; padding-left: 90px; padding-right: 70px;">
            <div>
                <h1>Albums we <b>love</b> right now</h1>
                <a href="" class="brandiconhover" uk-icon="icon: arrow-right; ratio: 3" style="color: #2AC8B5;"></a>
            </div>
        </div>
            

        <div class="uk-width-2-3@s grids">
            
                <div class="uk-grid-small uk-child-width-expand@s uk-text-center uk-grid-row-small" uk-grid="parallax: 100">
                
                <% top_albums.forEach( (album)=> { %>  <!-- prev was albumdata.forEach-->

                    <div>
                        <div class="uk-card uk-card-default uk-card-body gridbox" style="background: url('<%= album.img_url %>'); background-size: cover;">
                        <div class="hover_extras">
                            <div class="uk-position-centre-left uk-padding-small" style="margin-top: 30%;">
                                <div class="hover_text uk-text-left">
                                    <a href="" class="uk-icon-link ratio: 1 brandiconhover" uk-icon="plus"  style="color: #2AC8B5;"></a>
                                    <span>Add to Collection</span>
                                </div>
                                <div class="hover_text uk-text-left">
                                    <a href="" class="uk-icon-link ratio: 1 brandiconhover" uk-icon="pencil"  style="color: #2AC8B5;"></a>
                                    <span>Write a Review</span>
                                </div>
                            </div>  
                            <div class="uk-position-bottom-right">
                                <a href="/album?bid=<%= album.album_id %>" class="brandiconhover uk-padding-small" uk-icon="icon: arrow-right; ratio: 2" style="color: #2AC8B5;"></a>
                            </div>                          
                        </div>
                    </div>
                </div>
            <% }); %>
       </div>
            
            
    

