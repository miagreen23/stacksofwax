<!--start of albums we love section-->

<div class="mycontainer albumgrids">
    
    <div class="uk-grid"> 
        
        <div class="uk-width-1-3@s uk-margin-large-top uk-width-expand if_small_screen" style="padding-left: 90px; padding-right: 70px;">
            <div>
                <h1>Albums we <b>love</b> right now</h1>
                <a href="/allalbums" class="brandiconhover" uk-icon="icon: arrow-right; ratio: 3" style="color: #eb982b;;"></a>
            </div>
        </div>

        
            <ul class="uk-width-2-3@m uk-grid uk-margin-small-top albumgrids" id="grid_padding_small_screen" uk-grid="parallax: 150">
                <% top_albums.forEach( (album)=> { %>  <!-- prev was albumdata.forEach-->

                <li class="uk-width-1-3@m uk-width-1-3@s uk-width-1-4@l uk-card uk-card-body uk-padding-remove" style="margin: 25px; width: 230px; height: 230px;">
                    <div class="gridbox" style="background: url('<%= album.img_url %>'); background-size: contain; background-repeat: no-repeat; height: 250px; width: 250px;">
                        <div class="hover_extras">
                            <div class="uk-position-centre-left" style="margin-top: 44%;">
                                <div class="hover_text uk-text-left">
                                    <a href="" class="uk-icon-link ratio: 1 brandiconhover" uk-icon="plus"  style="color: #eb982b;;"></a>
                                    <span>Add to Collection</span>
                                </div>
                                <!--<div class="hover_text uk-text-left">
                                    <a href="" class="uk-icon-link ratio: 1 brandiconhover" uk-icon="pencil"  style="color: #2AC8B5;"></a>
                                    <span>See Details</span>
                                </div>-->
                            </div>  
                            <div class="uk-position-bottom-right">
                                <a href="/album?bid=<%= album.album_id %>" class="brandiconhover uk-padding-small" uk-icon="icon: arrow-right; ratio: 2" style="color: #eb982b;;"></a>
                            </div>                          
                        </div>
                   </div> 
               </li>
            <% }); %>
                 
            </ul>
            
            
            
   
       

    </div>
</div>
<!--end of albums we love section-->