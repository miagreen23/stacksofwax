<div class="toppicks">
    <div class="uk-grid titlebanner">
        
            <h1 class="whitetext">Top picks for you</h1>
            <a href="/allalbums"><p class="uk-text-default uk-text-right uk-align-right whitetext uk-margin-medium-bottom" id="seeall">SEE ALL <span uk-icon="icon: arrow-right; ratio: 1.2" id="whiteiconhover"></span> </p></a>

    </div>

    <div class="uk-slider toppicks" style="margin-left: 10px;">
        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider>

            <ul class="uk-slider-items uk-grid uk-width-1-5@m uk-width-1-3@s">
                    
                <% album_genre_id.forEach( (album)=> { %> 
                
                    <li>
                        <div class="toppickscard uk-card-hover" id="card">

                            <div class="uk-card-body" style="padding: 20px;">
                                <div class="imagebox">
                                    <a href="/album?bid=<%= album.album_id %>"><img src="<%= album.img_url %>"></a>
                                </div>
                                <div class="uk-grid">
                                    <div class="uk-width">
                                        <div class="uk-card-title">
                                            <h3 class="uk-text-bolder" style="color: #1E1E1E;"><%= album.artist_name %></h3>
                                            <div class="info uk-text-meta uk-text-bold uk-text-uppercase">
                                                <p><%= album.album_name %></p>
                                                <p><%= album.release_year %></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="uk-width-1-3@s uk-position-bottom-right icons">
                                            <a href="/album?bid=<%= album.album_id %>/writereview" class="brandiconhover" uk-icon="icon: pencil; ratio: 1" style="color: #eb982b;; float: left; margin: 1.5px;" uk-tooltip="title: Review Album; pos: top-left"></a>
                                            <a href="" class="brandiconhover" uk-icon="icon: plus; ratio: 1" style="color: #eb982b; float: left; margin: 1.5px;" uk-tooltip="title: Add to Collection; pos: top-left"></a>
            
                                    </div>
                                </div>
                            </div>
                        
                        </div>
                    </li>
                
                <% }); %> 
            </ul>
        
            <a class="uk-position-center-left uk-position-small uk-hidden-hover" style="color: #1E1E1E;" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
            <a class="uk-position-center-right uk-position-small uk-hidden-hover" style="color: #1E1E1E;" href="#" uk-slidenav-next uk-slider-item="next"></a>
        
        </div>
    
    </div>
</div>